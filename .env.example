# ===============================
# GENERAL & DJANGO SETTINGS
# ===============================
# Set to False in production
DEBUG=True
# IMPORTANT: Use a randomly generated key in production
SECRET_KEY=your-secret-key-for-django-insecure

# ===============================
# DATABASE (POSTGRESQL)
# ===============================
# These are the credentials for the database service running inside Docker.
# You generally do not need to change these for local development.
POSTGRES_DB=ai_news_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_HOST=db
POSTGRES_PORT=5432

# This is the full connection URL Django will use to connect to the DB container.
DATABASE_URL=postgres://admin:admin@db:5432/ai_news_db

# ===============================
# BACKEND (DJANGO)
# ===============================
# Allowed hosts for the Django backend. 'backend' is the service name in Docker.
ALLOWED_HOSTS=localhost,127.0.0.1,backend
# Origins to allow for Cross-Origin Resource Sharing (CORS).
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
# The URL the backend uses to communicate with the agent service.
NEWS_AGENT_BASE_URL=http://agent:5001

# ===============================
# AI NEWS AGENT
# ===============================
# IMPORTANT: You must provide your own API key for the AI service.
SILICONFLOW_API_KEY=your_siliconflow_api_key_here
# The URL the agent uses to post processed news back to the backend.
BACKEND_API_URL=http://backend:8000/api/news/

# ===============================
# FRONTEND (REACT)
# ===============================
# These are the public-facing URLs the React app will use to make API calls.
# They should point to the ports exposed on your host machine.
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_AGENT_BASE_URL=http://localhost:5001
# ===============================
# AI CHAT SETTINGS
# ===============================
# Base URL for SiliconFlow API service
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
# Default AI model for chat functionality
MODEL_NAME=Qwen/Qwen2.5-7B-Instruct
