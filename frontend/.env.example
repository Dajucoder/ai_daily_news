# React App 环境变量示例文件
# 复制此文件为 .env 并根据实际情况修改配置

# API 服务器配置
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_AGENT_BASE_URL=http://localhost:5001

# 应用配置
REACT_APP_NAME=AI新闻系统
REACT_APP_VERSION=1.0.0

# 开发环境配置
REACT_APP_ENV=development

# 调试模式
REACT_APP_DEBUG=true

# 时区设置
REACT_APP_TIMEZONE=Asia/Shanghai

# 分页配置
REACT_APP_DEFAULT_PAGE_SIZE=10
REACT_APP_MAX_PAGE_SIZE=100

# 轮询间隔（毫秒）
REACT_APP_POLLING_INTERVAL=2000

# 请求超时时间（毫秒）
REACT_APP_REQUEST_TIMEOUT=30000

# 是否启用自动刷新
REACT_APP_AUTO_REFRESH=true

# 自动刷新间隔（毫秒）
REACT_APP_AUTO_REFRESH_INTERVAL=60000